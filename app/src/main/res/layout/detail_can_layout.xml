<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#fff"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_marginLeft="5dp"
                android:layout_weight=".4"
                android:text="Product Name:"
                android:textColor="#616161" />


            <TextView

                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight=".3"
                android:text=""
                android:textColor="#616161" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".4"
                android:text="Collect:"
                android:textColor="#616161" />


            <EditText

                android:id="@+id/can_collect"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_weight=".2"
                android:backgroundTint="#757575"
                android:editable="false"
                android:inputType="none"
                android:textColor="#616161" />

            <EditText
                android:text=""
                android:id="@+id/can_collectValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight=".2"
                android:backgroundTint="#757575"
                android:hint="value"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="#616161"
                android:textColorHint="@color/hintColor" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_weight=".4"
                android:text="Deliver:"
                android:textColor="#616161" />

            <EditText

                android:id="@+id/can_deliver"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".2"
                android:backgroundTint="#757575"
                android:hint=""
                android:textColor="#616161"
                android:textColorHint="#757575" />

            <EditText
                android:text=""
                android:id="@+id/can_deliverValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight=".2"
                android:backgroundTint="#757575"
                android:hint="value"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="#616161"
                android:textColorHint="@color/hintColor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView

                android:id="@+id/damage_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".4"
                android:text="Damaged:"
                android:textColor="#616161" />

            <EditText
                android:id="@+id/damaged_can"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".2"
                android:backgroundTint="#757575"
                android:hint=""
                android:textColor="#616161"
                android:textColorHint="#757575" />

            <EditText
                android:text=""
                android:inputType="number"
                android:maxLength="5"
                android:id="@+id/damaged_canValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight=".2"
                android:backgroundTint="#757575"
                android:hint="value"
                android:textColor="#616161"
                android:textColorHint="@color/hintColor" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/lost_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".4"
                android:text="Lost :"
                android:textColor="#616161" />

            <EditText
                android:id="@+id/lost_can"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".2"
                android:backgroundTint="#757575"
                android:hint=""
                android:textColor="#616161"
                android:textColorHint="#757575" />

            <EditText
                android:text=""
                android:id="@+id/lost_canValue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight=".2"
                android:backgroundTint="#757575"
                android:hint="value"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="#616161"
                android:textColorHint="@color/hintColor" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>