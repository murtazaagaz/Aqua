<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.onesttech.stockmaneger.activity.AddCustomerActivity">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar"/>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:layout_below="@+id/toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp">
        <EditText
            android:hint="Name"
            android:backgroundTint="#757575"
            android:textColorHint="@color/hintColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"/>
    </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp">

            <EditText
                android:backgroundTint="#757575"
                android:textColorHint="@color/hintColor"

                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Mobile No." />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp">
            <EditText
                android:hint="Address"
                android:backgroundTint="#757575"
                android:textColorHint="@color/hintColor"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="3dp">
        <EditText
            android:hint="Area"
            android:editable="false"
            android:backgroundTint="#757575"
            android:textColorHint="@color/hintColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/area"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="3dp">

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:backgroundTint="#757575"
            android:textColorHint="@color/hintColor"
            android:layout_height="wrap_content"
            android:hint="City" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="3dp">
        <EditText
            android:backgroundTint="#757575"
            android:textColorHint="@color/hintColor"
            android:hint="Product"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product"/>
    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp">
            <EditText
                android:hint="Product Rate"
                android:backgroundTint="#757575"
                android:textColorHint="@color/hintColor"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rate"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add More"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:textSize="16sp"
            android:textColor="@color/textColrDark"/>
        <LinearLayout
            android:id="@+id/add_more_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp">

            <EditText
                android:id="@+id/security_depo"
                android:backgroundTint="#757575"
                android:textColorHint="@color/hintColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Security Deposited" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp">

            <EditText
                android:id="@+id/gst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="GST No." />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/amount"
            android:id="@+id/pay_mode_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Mode"
                android:id="@+id/paymentTv"
                />
            <Spinner
                android:layout_marginLeft="10dp"
                android:id="@+id/paymentSpinner"
                android:layout_below="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp">

            <EditText
                android:id="@+id/amount"
                android:backgroundTint="#757575"
                android:textColorHint="@color/hintColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount Paid" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp">

            <EditText
                android:id="@+id/check_no"
                android:layout_width="match_parent"
                android:backgroundTint="#757575"
                android:textColorHint="@color/hintColor"
                android:layout_height="wrap_content"
                android:hint="Cheque/Transaction No." />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/round_button"
        android:textColor="@color/white"
        android:text="Add"/>
</RelativeLayout>
